<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectOptionActivity">

    <Button
        android:id="@+id/btn_pl"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="#003EB4D1"
        android:text="Pattern Lock"
        app:backgroundTint="#1DD6DB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fs" />

    <Button
        android:id="@+id/btn_fs"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="#003EB4D1"
        android:text="Finger Print Scanner"
        app:backgroundTint="#1DD6DB"
        app:layout_constraintBottom_toTopOf="@+id/btn_pl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>